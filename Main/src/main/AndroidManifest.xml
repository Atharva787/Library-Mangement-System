<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.librarymangementsystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RegisterUser"
            android:label="Register as User"/>
        <activity android:name=".UserLogin"
            android:label="Login as User"/>
        <activity android:name=".RegisterAdmin"
            android:label="Register as Admin"/>
        <activity android:name=".AdminLogin"
            android:label="Login as User"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>